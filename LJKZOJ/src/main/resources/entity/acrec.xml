<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="entity">
    <insert id="addAC" parameterType="ACRec">
        insert into acrec(email, pid) values ('${email}', '${pid}')
    </insert>

    <select id="getRecordByEmail" parameterType="String" resultType="String">
        select pid from acrec where email = '${email}'
    </select>

    <select id="getRecordByEmailInCompetition" parameterType="Map" resultType="String">
        select acrec.pid from (acrec, problem_used)
        where acrec.email = '${email}' and acrec.pid = problem_used.pid and problem_used.cid = '${cid}'
    </select>
</mapper>