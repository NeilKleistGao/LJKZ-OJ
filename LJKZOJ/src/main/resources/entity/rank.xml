<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="entity">
    <select id="getRankByEmail" resultType="Rank">
        select * from rank where email = ${email}
    </select>

    <select id="getRankByCID" resultType="Rank">
        select * from rank where cid = ${cid}
    </select>

    <insert id="addRank" parameterType="Rank">
        insert into rank(cid, email, ac, penalty, rank)
        values (${cid}, ${email}, ${ac}, ${penalty}, ${rank})
    </insert>

    <update id="updateRank" parameterType="Rank">
        update rank set ac = ${ac}, penalty = ${penalty}, rank = ${rank}
    </update>
</mapper>